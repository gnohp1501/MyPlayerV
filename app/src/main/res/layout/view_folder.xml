<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:src="@drawable/folder"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:layout_marginLeft="@dimen/_10sdp"
        >

        <TextView
            android:id="@+id/tv_nameFolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/tv_path"
            android:text="NAME FOLDER"
            android:textSize="15dp"
            android:textColor="@color/color_theme_5"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_path"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="PATH"
            android:textColor="@color/color_theme_5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="COUNT VIDEO"
            android:id="@+id/tv_numberOfVideo"
            android:layout_below="@id/tv_path"
            android:textColor="@color/color_theme_5"
            />
    </RelativeLayout>
</LinearLayout>